<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd" xmlns:p="tapestry:parameter">
<head>
    <title>Employee Details</title>
    <script type="text/javascript">
    function showImagePopup(imagePath) {
        const imagePopup = document.getElementById('imagePopup');
        const imageElement = document.getElementById('popupImage');

            if (imagePath) {
            imageElement.src = imagePath;
            imagePopup.style.display = 'block';
        } else {
            alert("Image not found!");
        }
    }

    function closePopup() {
        // Hide the popup
        document.getElementById('imagePopup').style.display = 'none';
    }
</script>
</head>
<body>
<div t:type="header" t:companyAddress="'123 Main Street'" t:companyName="'Kane Solutions'"></div>
<div style="position: absolute; top: 10px; right: 10px;">
    <t:PageLink page="Login">[CLOSE]</t:PageLink>
</div>

<h1>Employee Details</h1>

<t:if test="isAdmin">
    <a t:type="PageLink" page="AddEmployee">Add Employee</a>
</t:if>


<t:grid source="employees" row="employee" reorder="Id,Username,Age,Dob,Address,Role,ImagePath,Actions" add="Role,Actions,Action" exclude="Password" rowsPerPage="4"  >
    <p:Idcell>
        <t:if test="isAdmin">
            <a t:type="PageLink" page="EmployeeList" context="${employee.id}">${employee.id}</a>

        </t:if>
        <t:if test="!isAdmin">
            <a t:type="PageLink" page="EmployeeList" context="${employeeId}">${employeeId}</a>
        </t:if>

    </p:Idcell>

    <p:Rolecell>
            <strong>${employee.role.role_name}</strong>
    </p:Rolecell>
    <p:Actioncell>
        <t:EmpBday employeeId="employee.id" />
    </p:Actioncell>
    <p:Actionscell>

        <t:if test="isAdmin">
            <a t:type="EventLink" event="promote" context="${employee.id}">Promote</a> |
            <a t:type="PageLink" page="EditEmployee" context="${employee.id}">Edit</a> |
            <a t:type="PageLink" page="DeleteEmployee" context="${employee.id}"
               onclick="return confirm('Are you sure?');">Delete</a>
        </t:if>

        <t:if test="!isAdmin">
            <a t:type="PageLink" page="EmployeeList" context="${employeeId}">View</a>
        </t:if>

    </p:Actionscell>

    <p:ImagePathcell>
        <a href="#"
                onclick="showImagePopup('${employee.imagePath}')">[IMAGE]</a>
    </p:ImagePathcell>
    <p:empty>
        <p>There are no users to display; you can <a t:type="PageLink" page="AddEmployee">add some</a>.</p>
    </p:empty>
</t:grid>

<t:if test="${feedbackMessage}">
    <p>${feedbackMessage}</p>
</t:if>

<div id="imagePopup" style="display:none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.7); z-index: 1000;">
    <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center; background: white; padding: 20px; border-radius: 8px;">
        <img id="popupImage" src="" alt="Employee Image" style="max-width: 80%; max-height: 80%;" />
        <br />
        <button onclick="closePopup()">Close</button>
    </div>
</div>
</body>
</html>