<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd" xmlns:p="tapestry:parameter">
<head>
    <title>Employee Details</title>
</head>
<script>
    function viewImage(imagePath) {

        const popupImage = document.getElementById("popupImage");
        popupImage.src = imagePath;


        document.getElementById("imagePopup").style.display = "block";
        document.getElementById("popupOverlay").style.display = "block";
    }

    function closeImagePopup() {
        // Hide the popup and overlay
        document.getElementById("imagePopup").style.display = "none";
        document.getElementById("popupOverlay").style.display = "none";
    }
</script>
<body>
<div t:type="header" t:companyAddress="'123 Main Street'" t:companyName="'Kane Solutions'"></div>
<div style="position: absolute; top: 10px; right: 10px;">
    <t:PageLink page="Login">[CLOSE]</t:PageLink>
</div>

<h1>Employee Details</h1>

<t:if test="isAdmin">
    <a t:type="PageLink" page="AddEmployee">Add Employee</a>
</t:if>

<t:EmpBday employeeId="employee.id" />

<t:grid source="employees" row="employee" reorder="Id,Username,Age,Dob,Gender,Address,Role,ImagePath,Actions" add="Role,Actions" exclude="Password" rowsPerPage="4"  >
    <p:Idcell>
        <t:if test="isAdmin">
            <a t:type="PageLink" page="EmployeeList" context="${employee.id}">${employee.id}</a>

        </t:if>
        <t:if test="!isAdmin">
            <a t:type="PageLink" page="EmployeeList" context="${employeeId}">${employeeId}</a>
        </t:if>

    </p:Idcell>

    <p:Rolecell>
            <strong>${employee.role.role_name}</strong>
    </p:Rolecell>

    <p:Actionscell>

        <t:if test="isAdmin">

            <a t:type="EventLink" event="promote" context="${employee.id}">Promote</a> |
            <a t:type="PageLink" page="EditEmployee" context="${employee.id}">Edit</a> |
            <a t:type="PageLink" page="DeleteEmployee" context="${employee.id}"
               onclick="return confirm('Are you sure?');">Delete</a>
        </t:if>

        <t:if test="!isAdmin">

            <a t:type="PageLink" page="EmployeeList" context="${employeeId}">View</a>
        </t:if>

    </p:Actionscell>

    <p:ImagePathcell>
        <a href = "#" onclick="viewImage('${employee.imagePath}'); return false;" >[IMAGE]</a>
    </p:ImagePathcell>
    <p:empty>
        <p>There are no users to display; you can <a t:type="PageLink" page="AddEmployee">add some</a>.</p>
    </p:empty>
</t:grid>

<t:if test="${feedbackMessage}">
    <p>${feedbackMessage}</p>
</t:if>
<div id="imagePopup" style="display:none; position:fixed; top:50%; left:50%; transform:translate(-50%, -50%); background:white; padding:20px; border:1px solid #ccc; z-index:1000; box-shadow: 0 4px 8px rgba(0,0,0,0.2);">
    <img id="popupImage"  alt="Employee Image" style="max-width:500px; max-height:500px;" />
    <button onclick="closeImagePopup()" style="margin-top:10px; padding:5px 10px; background-color:#007bff; color:white; border:none; border-radius:4px; cursor:pointer;">Close</button>
</div>

<div id="popupOverlay" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.5); z-index:999;" onclick="closeImagePopup()"></div>

</body>
</html>